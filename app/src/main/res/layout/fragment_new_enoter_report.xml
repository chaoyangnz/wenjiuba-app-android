            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/listBackground"
                android:gravity="center"
                android:text="‧ ‧ ‧ 判读选项‧ ‧ ‧ "/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginBottom="30dp">


                <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                    android:id="@+id/new_enoter_report_requestPackageInd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:activeBgColor="@android:color/holo_green_dark"
                    app:toggleWidth="100dp"
                    app:textToggleLeft="机器人判读"
                    app:textToggleRight="专家判读"
                    android:layout_marginBottom="25dp"/>


                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/new_enoter_report_expert1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:hint="判读专家"
                    app:met_floatingLabel="normal"
                    android:visibility="gone"/>

            </LinearLayout>

            <TextView
                android:id="@+id/new_enoter_report_price_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical"
                android:text="总计：¥ 19.9元"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginBottom="10dp"/>

