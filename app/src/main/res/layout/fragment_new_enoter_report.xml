                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textSize="14dp"
                        android:hint="肺经(右)"
                        app:met_floatingLabel="highlight"
